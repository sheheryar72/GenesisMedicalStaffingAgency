@{
    ViewBag.Title = "Add Jobs";
    Layout = "~/Views/Home/_LayoutPage1.cshtml";
}

<style>
    .navbar-expand-lg .navbar-nav .nav-link {
    color: #000;
}
img#ourteamimg {
    width: 55%;
}
p#teamparagraph {
    font-size: 16px;
    margin-top: 2%;
}
element.style {
    background-color: #bfbfbf;
    margin-top: 4%;
}
</style>

<h2 style="margin-top: 10%; text-align:center">Add Jobs</h2>

<section class="h-100 h-custom" style="background-color: #8fc4b7; margin-top: 4%">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

            <form class="px-md-2" method="post" action="/Home/AddJobsInDB/">

              <div class="form-outline mb-4">
                  <input type="hidden" name="Id"/>
                <input type="text" name="Title" id="form3Example1q" class="form-control" />
                <label class="form-label" for="form3Example1q">Title</label>
              </div>

              <div class="form-outline mb-4">
                <input type="text" name="Description" id="form3Example1q" class="form-control" />
                <label class="form-label" for="form3Example1q">Description</label>
              </div>

              <div class="form-outline mb-4">
                <input type="text" name="Requirement" id="form3Example1q" class="form-control" />
                <label class="form-label" for="form3Example1q">Requirement</label>
              </div>

              <div class="row mb-4 pb-2 pb-md-0 mb-md-5">
                <div class="col-md-6">

                  <div class="form-outline">
                    <input type="text" id="form3Example1w" name="Country" class="form-control" />
                    <label class="form-label" for="form3Example1w">Country</label>
                  </div>

                  <div class="form-outline">
                    <input type="text" id="form3Example1w"  name="City" class="form-control" />
                    <label class="form-label" for="form3Example1w">City</label>
                  </div>

                </div>
                <div class="col-md-6">

                  <div class="form-outline">
                    <input type="number" id="form3Example1w" name="Salary" class="form-control" />
                    <label class="form-label" for="form3Example1w">Salary</label>
                  </div>

                  <div class="form-outline">
                    <input type="text" id="form3Example1w"  name="Tags" class="form-control" />
                    <label class="form-label" for="form3Example1w">Tags</label>
                  </div>

                </div>
              </div>

              <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>

            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>